html
	height 100%
	font-family "Spectral", "Open Sans", sans-serif
	font-size 100%

> 900px
	html
		font-size 90%

> 1400px
	html
		font-size 100%

body
	tab-size 4
	overflow hidden
	height 100%
	color text-color
	background-color bg-color

a
	color link-color
	text-decoration none
	default-transition

	:hover
		color link-hover-color
		text-shadow link-hover-text-shadow
		text-decoration none

	:active
		transform translateY(3px)

	// &.active
	// 	color link-active-color

img
	backface-visibility hidden

.hidden
	display none !important

.text-center
	text-align center

.spacer
	flex 1